<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="item_count" format="integer" />

    <declare-styleable name="ViewPagerIndicator">
        <attr name="item_count" />
    </declare-styleable>

    <declare-styleable name="WarpTitleViewPagerIndicator">
        <!--item的数量-->
        <attr name="tabIndicatorCount" format="integer" />
        <!--标题文字的大小-->
        <attr name="tabIndicatorTextSize" format="dimension" />
        <!--指示器正常颜色-->
        <attr name="tabTextColor" format="color" />
        <!--指示器选中后的文字颜色-->
        <attr name="tabSelectedTextColor" format="color" />
        <!--指示器高度-->
        <attr name="WarpTabIndicatorHeight" format="reference" />
    </declare-styleable>
</resources>